# Copy this file to .env and provide environment-specific secrets.
# The application loads it automatically in development via python-dotenv.

# Flask secret key used for signing sessions and CSRF tokens.
SECRET_KEY=change-me-in-dev

# Database connection string. Use a DSN compatible with SQLAlchemy.
DATABASE_URL=postgresql+psycopg2://scada_app:scada_password@localhost:5432/scada

# PLC integration credentials exposed to adapters that require authentication.
PLC_DEFAULT_USERNAME=plc-operator
PLC_DEFAULT_PASSWORD=super-secret-password

# Optional: pointer to the secret path in Vault/SSM/Key Vault when using a secret manager.
#PLC_SECRET_BACKEND_PATH=secret/data/scada/plc

# Redis cache URL (optional, falls back to redis://localhost:5432/0 when absent).
#REDIS_URL=redis://localhost:6379/0

# Mail settings for alert delivery (optional).
#MAIL_SERVER=smtp.example.com
#MAIL_PORT=587
#MAIL_USERNAME=alerts@example.com
#MAIL_PASSWORD=app-specific-password
#MAIL_USE_TLS=True
#MAIL_DEFAULT_SENDER=alerts@example.com
